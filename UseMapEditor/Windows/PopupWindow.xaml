<controls:MetroWindow  xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="UseMapEditor.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseMapEditor.Windows"
        Topmost="True"        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        materialDesign:ShadowAssist.CacheMode="{x:Null}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowTitleBrush="{DynamicResource MaterialDesignPaper}"
        BorderBrush="{DynamicResource MaterialDesignBody}"
        Closing="MetroWindow_Closing"
        Title="" Height="600" Width="708">
    <Border x:Name="MainGrid" Background="{DynamicResource MaterialDesignPaper}">

    </Border>
</controls:MetroWindow>
